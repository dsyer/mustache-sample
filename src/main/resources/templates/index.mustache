{{<layout}}{{$menu}}home{{/menu}}{{$body}}
	<h1>Demo</h1>
	<div class="container">
		<div class="col-sm-offset-2 col-sm-10">Hello World</div>
		{{#form}}<form method="post">
			<div class="form-group has-feedback">
				{{#field}}
				<div class="form-group{{^valid}} has-error{{/valid}}">
					<label class="col-sm-2 control-label">{{label}}</label>
					<div class="col-sm-4">
						<input class="form-control" type="text" name="{{name}}" value="{{value}}"/>
						{{#valid}}<span
							class="fa fa-check valid-feedback"
							aria-hidden="true"></span>{{/valid}}
						{{^valid}}<span
							class="fa fa-remove invalid-feedback"
							aria-hidden="true"></span>
							{{#errors}}<span class="help-inline">{{.}}</span>{{/errors}}{{/valid}}
					</div>
				</div>
				{{/field}}
				<input type="hidden" name="_csrf" value="{{_csrf.token}}" />
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button class="btn btn-primary" type="submit">Submit</button>
				</div>
			</div>
		</form>{{/form}}
	</div>
	{{#foo.value}}<div class="container">
		<div class="col-sm-offset-2 col-sm-10">Value is: {{.}}</div>
	</div>{{/foo.value}}
{{/body}}{{/layout}}